<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :full_name %><br />
  <%= f.text_field :full_name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <%= f.fields_for :car_attributes, resource.car  do |car| -%>
    <div><%= car.label :make %><br />
      <%= car.text_field :make %></div>
    <div><%= car.label :model %><br />
      <%= car.text_field :model %></div>
    <div><%= car.label :initial_odometer %><br />
      <%= car.text_field :initial_odometer %></div>
  <% end -%>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
